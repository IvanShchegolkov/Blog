@model Blog.ViewModels.RegisterViewModel

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr />
            <h2 class="intro-text text-center">
                <strong>Регистрация</strong>
            </h2>
            <hr>

            <form method="post" asp-controller="IdAccount" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="PasswordConfirm"></label><br />
                    <input asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div>
                    <input type="submit" value="Регистрация" />
                </div>
            </form>

        </div>
    </div>
</div>