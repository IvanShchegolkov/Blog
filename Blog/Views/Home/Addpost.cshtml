@model Blog.ViewModels.PostAddModel

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr />
            <h2 class="intro-text text-center">
                <strong>Добавить пост</strong>
            </h2>
            <hr>

            <form asp-action="Addpost" asp-controller="Home" asp-anti-forgery="true" role="form" class="form-container" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label asp-for="PostTitle">Введите логин</label>
                        <input type="text" asp-for="PostTitle" class="form-control" placeholder="Введите заголовок поста" required>
                        <span asp-validation-for="PostTitle" />
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="PostImage"><b>Фото</b></label>
                        <input name="PostImage" type="file" class="form-control" placeholder="Фото">
                        <span asp-validation-for="PostImage" />
                    </div>

                    <div class="form-group col-lg-12">
                        <label asp-for="PostText"><b>Текст</b></label>
                        <textarea asp-for="PostText" class="form-control" style="max-width: 100%; max-height: 500px;"></textarea>
                        <span asp-validation-for="PostText" />
                    </div>

                    <div class="form-group col-lg-12">
                        <input type="submit" value="Отправить" class="btn btn-outline-dark btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>