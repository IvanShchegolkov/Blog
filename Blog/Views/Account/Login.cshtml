@model Blog.ViewModels.LoginModel

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr />
            <h2 class="intro-text text-center">
                <strong>Вход на сайт</strong>
            </h2>
            <hr>

            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" role="form">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonLogin">Введите логин</label>
                        <input type="text" asp-for="PersonLogin" class="form-control"/>
                        <span asp-validation-for="PersonLogin" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonPassword">Введите пароль</label>
                        <input asp-for="PersonPassword" class="form-control" />
                        <span asp-validation-for="PersonPassword" />
                    </div>
                    <div class="form-group col-lg-12">
                        <input type="submit" value="Войти" class="btn btn-outline-dark btn btn-default" />
                        <a asp-action="Register" asp-controller="Account" class="">Регистрация</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>