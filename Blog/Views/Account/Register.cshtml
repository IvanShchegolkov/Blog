@model Blog.ViewModels.RegisterModel

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr />
            <h2 class="intro-text text-center">
                <strong>Регистрация</strong>
            </h2>
            <hr>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" role="form">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonLogin">Введите логин</label><br />
                        <input type="text" asp-for="PersonLogin" class="form-control" />
                        <span asp-validation-for="PersonLogin" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonPassword">Введите пароль</label><br />
                        <input asp-for="PersonPassword" class="form-control" />
                        <span asp-validation-for="PersonPassword" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonFirstName">Введите имя</label><br />
                        <input type="text" asp-for="PersonFirstName" class="form-control" />
                        <span asp-validation-for="PersonFirstName" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonLastName">Введите фамилию</label><br />
                        <input type="text" asp-for="PersonLastName" class="form-control" />
                        <span asp-validation-for="PersonLastName" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PersonEmail">Введите Email</label><br />
                        <input type="text" asp-for="PersonEmail" class="form-control" />
                        <span asp-validation-for="PersonEmail" />
                    </div>
                    <div class="form-group col-lg-12">
                        <input type="submit" value="Регистрация" class="btn btn-outline-dark btn btn-default" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>